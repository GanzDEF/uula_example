<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/app_icon</item>
    </style>

    <style name="TextParent">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>
    <style name="TitleWhite" parent="TextParent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="SubTitleWhite" parent="TextParent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextWhite" parent="TextParent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextGrey" parent="TextParent">
        <item name="android:textColor">@color/colorTextSomeKindOfGrey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextDescription" parent="TextParent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ToolBarWithNavigationBack">
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_black_24dp</item>
    </style>
</resources>
